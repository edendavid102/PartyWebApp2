@model PartWebApp2.Models.HomePage

@{
    ViewData["Title"] = "Index";
    Layout = "_HomeLayout";
}

<head>
    <link rel="stylesheet" href="~/css/HomePage.css" />
</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60">
    <div id="portfolio" class="jumbotron text-center" data-target=".navbar">
        <h1>@*WELCOME*@</h1>
        <p>Time to celebrate</p>
        <form asp-action="FindParty">
            <div class="input-group">
                <input class="form-control" size="50" placeholder="Find specific party" required />
                <span class="text-danger"></span>
                <div class="input-group-btn">
                    <button type="button" value="FindParty" class="btn btn-danger">Search</button>
                </div>
            </div>
        </form>
    </div>
    <div id="portfolio" class="container-fluid text-center">
        <h1>New Paties</h1>
        @foreach (var item in Model.parties)
        {
            <div class="container-fluid col-sm-4">
                <div class="a-box">
                    <div class="img-container">
                        <div class="img-inner">
                            <div class="inner-skew">
                                <img src="@Html.DisplayFor( modelItem => item.partyImage.imageUrl)">
                            </div>
                        </div>
                    </div>
                    <div class="text-container color2">
                        <h3>
                            @item.name
                        </h3>
                        <h5>
                            @item.eventDate.Year / @item.eventDate.Month / @item.eventDate.Day
                        </h5>
                        <h5>
                            @item.genre
                        </h5>
                        <a asp-action="Details" asp-route-id="@item.Id">More Details</a> |
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="portfolio" class="container-fluid text-center">
        <h1>Top Performers</h1>
        @foreach (var item in Model.performers)
        {
            <div class="container-fluid col-sm-4">
                <div class="a-box">
                    <div class="img-container">
                        <div class="img-inner">
                            <div class="inner-skew">
                                <img src="@Html.DisplayFor( modelItem => item.SpotifyId)">
                            </div>
                        </div>
                    </div>
                    <div class="text-container color2">
                        <h3>
                            @item.SpotifyId
                        </h3>
                        <h5>
                            @item.SpotifyId
                        </h5>
                        <h5>
                            @item.SpotifyId
                        </h5>
                        <a asp-action="Details" asp-route-id="@item.Id">More Details</a> |
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="portfolio" class="container-fluid text-center">
        <h1>Best Clubs</h1>
        @foreach (var item in Model.clubs)
        {
            <div class="container-fluid col-sm-4">
                <div class="a-box">
                    <div class="img-container">
                        <div class="img-inner">
                            <div class="inner-skew">
                                <img src="@Html.DisplayFor( modelItem => item.Parties[0].partyImage.imageUrl)">
                            </div>
                        </div>
                    </div>
                    <div class="text-container color2">
                        <h3>
                            @item.Name
                        </h3>
                        <h5>
                            @item.LocationId
                        </h5>
                        <h5>
                            @item.Name
                        </h5>
                        <a asp-action="Details" asp-route-id="@item.Id">More Details</a> |
                    </div>
                </div>
            </div>
        }
    </div>
    <div>
        <h1>What we offer</h1>
        <div>
            <video width="600" height="600" controls>
                <source src="~/video/TomorrowlandPresents.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
    
    <div id="contact" class="container-fluid bg-grey">
            <h2 class="text-center">CONTACT</h2>
            <div class="row">
                <div class="col-sm-5">
                    <p>Contact us and we'll get back to you within 24 hours.</p>
                    <p><span class="glyphicon glyphicon-map-marker"></span> TEL AVIV, IL</p>
                    <p><span class="glyphicon glyphicon-phone"></span> +972 522520484</p>
                    <p><span class="glyphicon glyphicon-envelope"></span> omerperez@gmail.com</p>
                </div>
                <div class="col-sm-7 slideanim">
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <input class="form-control" id="name" name="name" placeholder="Name" type="text" required>
                        </div>
                        <div class="col-sm-6 form-group">
                            <input class="form-control" id="email" name="email" placeholder="Email" type="email" required>
                        </div>
                    </div>
                    <textarea class="form-control" id="comments" name="comments" placeholder="Comment" rows="5"></textarea><br>
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <button class="btn btn-default pull-right" type="submit">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>
