@model PartWebApp2.Models.Party

@{
    ViewData["Title"] = "Details";
    Layout = "_OtherPages";
}

<head>
    <link rel="stylesheet" href="~/css/HomePage.css" />
    <style>

        h1 {
            font-size: 7rem;
            text-align: center;
            height: 24vh;
            line-height: 20vh;
            color: #fcedd8;
            font-family: 'Niconne', cursive;
            font-weight: 700;
            text-shadow: 5px 5px 0px #eb452b, 10px 10px 0px #efa032, 15px 15px 0px #46b59b, 20px 20px 0px #017e7f;
        }

        .image {
            width: 50%;
            float: left;
            margin-top: 20px;
            height: 400px;
            padding: 20px;
            border-radius: 10px;
            display: flex;
        }

        .about {
            justify-content: center;
            flex-direction: row;
        }

        .aboutitem {
            width: 50%;
            float: right;
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            padding-top: 70px;
        }

        .buytickets {
            width: 90%;
            float: right;
            font-size: 25px;
            padding: 20px;
            display: flex;
            justify-content: center;
        }

        table {
            border: #3fc4da 3px solid;
            width: 100%;
        }

        th, td {
            text-align: center;
            padding: 10px;
        }

        tr:nth-child(even) {
            background-color: #000000
        }

        th {
            background-color: #3fc4da;
            color: white;
        }
    </style>
</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60">
    <div id="portfolio" class="jumbotron text-center" data-target=".navbar">
        <h1 class="titledit">@Model.name</h1>
        <table>
            <tr>
                <th>Date</th>
                <th>Open Doors</th>
                <th>Genre</th>
                <th>Area</th>
                <th>Club</th>
                <th>Minimal Age</th>
                <th>Price</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(model => model.eventDate)</td>
                <td>@Html.DisplayFor(model => model.startTime)</td>
                <td>@Html.DisplayFor(model => model.genre.Type)</td>
                <td>@Html.DisplayFor(model => model.area.Type)</td>
                <td>@Html.DisplayFor(model => model.club.Name)</td>
                <td>+@Html.DisplayFor(model => model.minimalAge)</td>
                <td>@Html.DisplayFor(model => model.price) ILS</td>
            </tr>
        </table>
    </div>

    <div id="portfolio" class="container-fluid text-center">
        <div class="image">
            <img src="@Html.DisplayFor(model => model.partyImage.imageUrl)">
        </div>
        <div class="aboutitem">
            <table class="aboutitem" style="border: cornflowerblue 0px solid; width: 90%;">
                <tr>
                    <th style="background-color: cornflowerblue;">Performers</th>
                </tr>
                <tr>
                    <td>Omer Adam</td>
                </tr>
                <tr>
                    <td>Omer Adam</td>
                </tr>
                <tr>
                    <td>Omer Adam</td>
                </tr>
            </table>

            <table class="aboutitem" style="border: cornflowerblue 0px solid; width: 90%;">
                <tr>
                    <th style="background-color: cornflowerblue;">Ticket Status</th>
                </tr>
                <tr>
                    <td> @Html.DisplayFor(model => model.ticketsPurchased) / @Html.DisplayFor(model => model.maxCapacity)</td>
                </tr>
            </table>
            <a class="btn btn-success buytickets" asp-action="BuyTickets" asp-route-id="@Model.Id">Buy Tickets</a>
        </div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>|
        <a asp-controller="PartyImages" asp-action="Edit" asp-route-id="@Model.partyImage.Id">Edit Party Image</a>
    </div>
   
</body>