@model PartWebApp2.Models.Party

@{
    ViewData["Title"] = "Create";
    Layout = "_CreatePagesLayout";
}

<head>
    <link rel="stylesheet" href="~/css/CreatePages.css" />
    <script>
        function addField() {
            var addedFieldCount = $('input.dynamic-field').length;
            if (addedFieldCount == 70) {//But you should check it on the server side too.
                alert('No more field allowed');
                return;
            }
            $('#performersFieldContainer').append('<input name="performersId"/>');
        }
    </script>
</head>
<body>
    <div class="testbox">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="banner">
                    <h1>New Party</h1>
                </div>
                <div>
                    <div class="item col-md-12">
                        <p>Event's Name</p>
                        <input asp-for="name" />
                        <span asp-validation-for="name" class="text-danger"></span>
                        <i class="fas"></i>
                    </div>
                </div>
                <div>
                    <div>
                        <div class="item col-md-6">
                            Date Of Event
                            <input asp-for="eventDate" />
                            <span asp-validation-for="eventDate" class="text-danger"></span>
                            <i class="fas"></i>
                        </div>
                        <div class="item col-md-6">
                            Time Of Event
                            <input asp-for="startTime" />
                            <span asp-validation-for="startTime" class="text-danger"></span>
                            <i class="fas"></i>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="item col-md-4">
                        Club
                        <select asp-for="clubId" asp-items="ViewBag.Clubs"></select>
                        <i class="fas"></i>
                    </div>
                    <div class="item col-md-4">
                        Area
                        <select asp-for="areaId" asp-items="ViewBag.Areas"></select>
                        <i class="fas"></i>
                    </div>
                    <div class="item col-md-4">
                        Genre
                        <select asp-for="genreId" asp-items="ViewBag.Genres"></select>
                        <i class="fas"></i>
                    </div>
                </div>
                <div class="item col-md-4">
                    Minimal Age
                    <input asp-for="minimalAge" />
                    <span asp-validation-for="minimalAge" class="text-danger"></span>
                    <i class="fas"></i>
                </div>
                <div class="item col-md-4">
                    Price
                    <input asp-for="price" type="number" />
                    <span asp-validation-for="price" class="text-danger"></span>
                    <i class="fas"></i>
                </div>
                <div class="item col-md-4">
                    Max Capacity
                    <input asp-for="maxCapacity" />
                    <span asp-validation-for="maxCapacity" class="text-danger"></span>
                    <i class="fas"></i>
                </div>
                <div class="item col-md-12">
                    <input name="imageUrl" placeholder="URL" />
                    <i class="fas"></i>
                </div>
                <div class="item col-md-12">
                    Performers Spotify Id
                    <div id="performersFieldContainer">
                        <input name="performersId" />
                    </div>
                    <button type="button" onclick="addField()">Add More Performers!</button>
                    <i class="fas"></i>
                </div>

                <div class="item col-md-12">
                    <p></p>
                    <p></p>
                    <p></p>
                    <button class="col-md-3">
                        <a asp-action="Index">Previous</a>
                    </button>
                    <p class="col-md-6"></p>
                    <button type="submit" value="Create" class="col-md-3">Create Party</button>
                </div>
            </div>
        </form>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
